    "xbee_base": {
        "name": "XBee base",
        "settings": {
            "number_of_sensors": 2,
            "custom_packet_limit": 1,
            "loop_delay": 0.01,
            "baud_rate": 57600,
            "specifications": {
                "memory_map_chunk": [
                    {
                        "name": "id",
                        "format": "B",
                        "value": 1,
                        "private": false
                    },
                    {
                        "name": "latitude",
                        "format": "d"
                    },
                    {
                        "name": "longitude",
                        "format": "d"
                    }
                ],
                "rssi_broadcast": [
                    {
                        "name": "id",
                        "format": "B",
                        "value": 2,
                        "private": true
                    },
                    {
                        "name": "latitude",
                        "format": "d"
                    },
                    {
                        "name": "longitude",
                        "format": "d"
                    },
                    {
                        "name": "sensor_id",
                        "format": "B"
                    },
                    {
                        "name": "timestamp",
                        "format": "d"
                    }
                ],
                "rssi_ground_station": [
                    {
                        "name": "id",
                        "format": "B",
                        "value": 3,
                        "private": true
                    },
                    {
                        "name": "from_latitude",
                        "format": "d"
                    },
                    {
                        "name": "from_longitude",
                        "format": "d"
                    },
                    {
                        "name": "to_latitude",
                        "format": "d"
                    },
                    {
                        "name": "to_longitude",
                        "format": "d"
                    },
                    {
                        "name": "rssi",
                        "format": "B"
                    }
                ],
                "ntp": [
                    {
                        "name": "id",
                        "format": "B",
                        "value": 4,
                        "private": true
                    },
                    {
                        "name": "sensor_id",
                        "format": "B"
                    },
                    {
                        "name": "timestamp_1",
                        "format": "d"
                    },
                    {
                        "name": "timestamp_2",
                        "format": "d"
                    },
                    {
                        "name": "timestamp_3",
                        "format": "d"
                    },
                    {
                        "name": "timestamp_4",
                        "format": "d"
                    }
                ]
            }
        }
